    {% if messages is not empty  %}
        <h4>Blog Posts</h4>
        <table border="1" valign="center" width="100%">
            {% for m in messages %}
                <tr>
                    <td rowspan="2">
                        {% if m.getUser() %}
                            {% if m.getUser().getUserAvatarFilename() %}
                                <img src="{{ asset('uploads/img/' ~ m.getUser().getUserAvatarFilename()) }}" height="50">
                            {% else %}
                                <img src="{{ asset('uploads/img/blank.jpg') }}" height="50">
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>{{ m.getAuthor() }}</td>
                    <td width="50%">{{ m.getTitle() }}</td>
                    <td align="right">
                        {{ m.getDate()|date('d.m.Y, H:i') }}
                        {% if is_owner %} {# include edit and delete for the Owner #}
                            <a class="button" href="{{ path('edit_blog', {'username': app.user.username , 'blogPost': m.getId()} ) }}" style="color: green">
                                {{ 'Edit' | trans }}
                            </a>
                            <a class="button" href="{{ path('delete_blog', {'username': app.user.username , 'blogPost': m.getId()} ) }}" style="color: red">
                                {{ 'Delete' | trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td colspan="3" >{{ m.getContent() }}  </td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
    {% if friends is not empty %}
        <h4>Friends</h4>
        <table border="1" valign="center" width="100%">
            {% for friend in friends %}
                <tr>
                    <td>ID: {{ friend.getId() }} </td>
                    <td align="right">
                        {{ friend.getDate()|date('d.m.Y, H:i') }}
                        {% if is_owner and not friend.isConfirmed() %} {# include accept and reject for the Owner #}
                            <a class="button" href="{{ path('confirm_friend', {'username': app.user.username , 'friend': friend.getId() } ) }}" style="color: green;">
                                {{ 'Accept'| trans }}
                            </a>
                            <a class="button" href="{{ path('reject_friend', {'username': app.user.username , 'friend': friend.getId() } ) }}" style="color: red;">
                                {{ 'Reject'| trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td colspan="2"> {{ friend.getMsg() }} </td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}
{% block sidepanel %}
    {{ parent() }}
    {{ render(controller('AppBundle:Default:userPanel')) }}
{% endblock %}